<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:padding="5dp">


    <LinearLayout
        android:background="@drawable/radius_white"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="15dp">

                <ImageButton
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:id="@+id/backBtn"
                    android:background="@drawable/back_btn" />

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="백운천"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:id="@+id/nameTV"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:baselineAligned="false"
                android:paddingRight="15dp">

                <ImageButton
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:id="@+id/addSongBtn"
                    android:background="@drawable/add_song_btn" />
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="35dp"
                android:paddingBottom="25dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="20dp"
                        android:textSize="10dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:background="#999"
                        android:textColor="#fff"
                        android:text="현재 알로" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:padding="10dp">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1">
                            <ImageButton
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:id="@+id/mySongInfoBtn"
                                android:background="@drawable/damienrice"
                                android:layout_marginLeft="8dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:textSize="12dp"
                                android:textColor="#000"
                                android:text="The blower's daughter"
                                android:id="@+id/mySongTV" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:textSize="10dp"
                                android:textColor="#999"
                                android:text="by Damien Rice"
                                android:id="@+id/mySongArtistTV" />
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center_vertical|right"
                            android:paddingRight="20dp"
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="9">

                            <ImageButton
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:id="@+id/mySongPlayBtn"
                                android:background="@drawable/play_btn" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="20dp"
                        android:textSize="10dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:background="#999"
                        android:textColor="#fff"
                        android:text="알로 목록" />

                    <!-- listview item start -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:padding="10dp">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1">
                            <ImageButton
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:id="@+id/selectSongInfoBtn"
                                android:background="@drawable/allo_logo"
                                android:layout_marginLeft="8dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:textSize="12dp"
                                android:textColor="#000"
                                android:text="점심의 제왕"
                                android:id="@+id/selectSongTV" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:textSize="10dp"
                                android:textColor="#999"
                                android:text="by 정주원"
                                android:id="@+id/selectSongArtistTV" />
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center_vertical|right"
                            android:paddingRight="20dp"
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="9">

                            <ImageButton
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:id="@+id/selectSongPlayBtn"
                                android:background="@drawable/play_btn" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="1px"
                        android:background="#ccc" />
                    <!-- listview item end -->

                    <!-- listview item start -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:padding="10dp">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1">
                            <ImageButton
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:id="@+id/selectSongInfoBtn"
                                android:background="@drawable/allo_logo"
                                android:layout_marginLeft="8dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:textSize="12dp"
                                android:textColor="#000"
                                android:text="0 to 1"
                                android:id="@+id/selectSongTV" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:textSize="10dp"
                                android:textColor="#999"
                                android:text="by WC"
                                android:id="@+id/selectSongArtistTV" />
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center_vertical|right"
                            android:paddingRight="20dp"
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="9">

                            <ImageButton
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:id="@+id/selectSongPlayBtn"
                                android:background="@drawable/play_btn" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="1px"
                        android:background="#ccc" />
                    <!-- listview item end -->

                    <!-- listview item start -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:padding="10dp">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1">
                            <ImageButton
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:id="@+id/selectSongInfoBtn"
                                android:background="@drawable/damienrice"
                                android:layout_marginLeft="8dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:textSize="12dp"
                                android:textColor="#000"
                                android:text="The blower's daughter"
                                android:id="@+id/selectSongTV" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:textSize="10dp"
                                android:textColor="#999"
                                android:text="by Damien Rice"
                                android:id="@+id/selectSongArtistTV" />
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center_vertical|right"
                            android:paddingRight="20dp"
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="9">

                            <ImageButton
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:id="@+id/selectSongPlayBtn"
                                android:background="@drawable/play_btn" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="1px"
                        android:background="#ccc" />
                    <!-- listview item end -->

                    <ListView
                        android:id="@+id/friendList"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                    </ListView>
                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:background="#f91f30"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:id="@+id/imageView"
                            android:background="@drawable/damienrice"
                            android:layout_marginLeft="10dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:textSize="12dp"
                            android:textColor="#eee"
                            android:text="The blower&apos;s daughter - Damien Rice"
                            android:id="@+id/playSongTV" />
                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center_vertical|right"
                        android:paddingRight="15dp"
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="5">

                        <ImageButton
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:id="@+id/playSongPlayBtn"
                            android:background="@drawable/pause_white_btn" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
